<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:PlannerApp.ViewModel"
             x:Class="PlannerApp.View.Orders"
             Title="Orders">
    <ContentPage.BindingContext>
        <viewModel:OrdersViewModel/>
    </ContentPage.BindingContext>
    
    
    <VerticalStackLayout>
        <Picker ItemsSource="{Binding StorageTypes}" SelectedItem="{Binding SelectedStorageType}" ItemDisplayBinding="{Binding Name}" BackgroundColor="Red" HeightRequest="150">
        </Picker>

        <ListView ItemsSource="{Binding StorageLocations}" SelectionMode="Single" BackgroundColor="Blue" HeightRequest="500">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border>
                        <Label Text="{Binding Name}"/>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>